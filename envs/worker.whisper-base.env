# NATS Configuration
NATS_URL=nats://127.0.0.1:5700
STREAM_NAME=AUDIO_WHISPER_BASE
SUBJECT=transcribe.request.whisper-base
QUEUE_DURABLE=whisper-base-wq
QUEUE_GROUP=workers
RESPONSE_PREFIX=audio.reply
QUEUE_MAX_MSGS=2000
QUEUE_MAX_AGE=30s
ACK_WAIT=30s
MAX_DELIVER=5
MAX_ACK_PENDING=64

# Worker Configuration
WORKER_CONCURRENCY=2

# HTTP Configuration
HTTP_ADDR=:5777

# Model Configuration
MODEL_NAME=whisper-base
MODEL_URL=https://huggingface.co/ggerganov/whisper.cpp/resolve/main/ggml-base.en.bin
MODEL_PATH=data/models/whisper-base/model.bin
MODEL_FORMAT=audio
MODEL_THREADS=4
CTX_SIZE=8192

# Audio-specific Configuration
WHISPER_LANGUAGE=auto
WHISPER_MAX_AUDIO_LENGTH=30  # seconds

# Data Directory Configuration  
DATA_DIR=data

# Database Configuration
DB_PATH=data/logs/whisper-base.sqlite

# Monitoring Configuration
MONITORING_TOPIC=monitoring.inference
BACKPRESSURE_THRESHOLD=3